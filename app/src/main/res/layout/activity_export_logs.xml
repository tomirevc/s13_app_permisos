<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white">

    <!-- Título de la Actividad -->
    <TextView
        android:id="@+id/tvExportLogsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Exportar Logs"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!-- Icono de Exportar Logs -->
    <ImageView
        android:id="@+id/ivExportLogsIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_export_logs"
        android:contentDescription="Icono de Exportación de Logs"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvExportLogsTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!-- Descripción de los Logs -->
    <TextView
        android:id="@+id/tvExportLogsDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Presiona el botón para exportar los logs de la aplicación."
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/ivExportLogsIcon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!-- Botón para exportar los logs -->
    <Button
        android:id="@+id/btnExportLogs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exportar Logs"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/tvExportLogsDescription"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
