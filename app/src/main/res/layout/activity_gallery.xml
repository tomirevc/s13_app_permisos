<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp"
    android:background="@color/white"
    tools:context=".GalleryActivity">

    <!-- T칤tulo de la actividad -->
    <TextView
        android:id="@+id/tvGalleryTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/activity_gallery"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!-- Estado del permiso de la galer칤a -->
    <TextView
        android:id="@+id/tvGalleryStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Estado del permiso de galer칤a"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvGalleryTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!-- Imagen seleccionada de la galer칤a -->
    <ImageView
        android:id="@+id/ivSelectedImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="Imagen seleccionada de la galer칤a"
        android:background="@android:color/darker_gray"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/tvGalleryStatus"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.4"/>

    <!-- Bot칩n para seleccionar imagen -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSelectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_select_image"
        app:iconGravity="textStart"
        app:iconTint="@android:color/white"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/ivSelectedImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!-- Bot칩n para solicitar permisos -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRequestPermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_grant_permission"
        android:visibility="gone"
        app:iconGravity="textStart"
        app:iconTint="@android:color/white"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/btnSelectImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!-- Informaci칩n sobre la imagen -->
    <TextView
        android:id="@+id/tvImageInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnRequestPermission"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!-- Mensaje de seguridad de las im치genes -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="游 Las im치genes accedidas se registran de forma segura"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvImageInfo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
